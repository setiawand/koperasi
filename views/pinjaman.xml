<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="jenis_simpanan">     
      <field name="name">Jenis Pinjaman</field>
      <field name="model">pinjaman</field>
      <field name="arch" type="xml">
        <tree>
          <field name="kode_pinjaman"/>
          <field name="nama_pinjaman"/>
          <field name="keterangan"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="pinjaman_action_window">
      <field name="name">Jenis Pinjaman</field>
      <field name="res_model">pinjaman</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem name="Pinjaman" id="koperasi.pinjaman_menu" parent="koperasi.menu_root"/>

    <!-- actions -->
    <menuitem name="Jenis Pinjaman" id="koperasi.jenis_pinjaman" parent="koperasi.pinjaman_menu"
              action="pinjaman_action_window"/>
  </data>
</odoo>
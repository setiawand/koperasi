    <record model="ir.ui.view" id="view_koperasi_member_form">
        <field name="name">koperasi.member.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
          <field name="type" position="before">
            <field name="is_member"/>
            <field name="member_number" attrs="{'invisible': [('is_member','=',False)]}"/>
          </field>
          <field name="vat" position="before">
            <field name="kecamatan"/>
            <field name="kelurahan"/>
          </field>
          <field name="vat" position="after">
            <field name="birthplace"/>
            <field name="birthdate"/>
            <field name="gender"/>
          </field>
        </field>
    </record>

    <record id="res_partner_search_inherit" model="ir.ui.view">
      <field name="name">koperasi anggota search</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_res_partner_filter"/>
      <field name="arch" type="xml">
          <field name="parent_id" position="after">
              <filter string="Anggota" name="anggota" domain="[('is_member', '=', True)]"/>
          </field>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="koperasi.action_window">
      <field name="name">Data Anggota</field>
      <field name="res_model">res.partner</field>
      <field name="view_mode">kanban,tree,form</field>
      <field name="context">{'search_default_anggota': 1}</field>
    </record>

    <!-- Top menu item -->

    <menuitem name="Koperasi" id="koperasi.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Anggota" id="anggota" parent="koperasi.menu_root"/>

    <!-- actions -->
    <menuitem name="Daftar Anggota" id="anggota_list" parent="anggota"
              action="koperasi.action_window"/>

  </data>
</odoo>